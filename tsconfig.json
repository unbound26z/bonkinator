{
  "compilerOptions": {
    "types": ["mocha"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2017"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": true
  },
  "include": ["tests/**/*"],
  "exclude": ["node_modules"]
}
